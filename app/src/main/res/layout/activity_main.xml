<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F0F0">

<!--    <TextView-->
<!--        style="@style/titleTheme"-->
<!--        android:text="@string/cipher" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner_8dp"
        android:backgroundTint="#F0F0F0"
        android:elevation="6dp"
        android:orientation="vertical">

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@string/string_cipher"-->
<!--            android:textColor="#000"></TextView>-->


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_str"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:inputType="textMultiLine"
                android:textSize="20dp"
                android:hint="@string/hint_str"/>

            <TextView
                android:id="@+id/cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="right"
                android:clickable="true"
                android:onClick="clearCross"
                android:textSize="30dp"
                android:text="Ã—"/>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioGroup
                    android:id="@+id/radioMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <RadioButton
                        android:id="@+id/radioEncry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/encrypt" />
                    <RadioButton
                        android:id="@+id/radioDecry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/decrypt"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/key_kaeji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textSize="18dp"
                    android:text="@string/key"/>
                <EditText
                    android:id="@+id/n_kaeji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F7F7F7"
                    android:inputType="number"
                    android:hint="@string/hint_kaeji"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/putMorse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone">

                <Button
                    style="@style/morsePutButton"
                    android:id="@+id/bt_put_short"
                    android:text="@string/short_point"/>

                <Button
                    style="@style/morsePutButton"
                    android:id="@+id/bt_put_long"
                    android:text="@string/long_point" />

                <Button
                    style="@style/morsePutButton"
                    android:id="@+id/bt_put_space"
                    android:text="@string/space"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

